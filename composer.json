{
    "name": "pqstudio/rest-utility-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 Bundle with helpers for creating robust Rest API",
    "keywords": ["rest", "bundle", "utility", "symfony2"],
    "homepage": "https://github.com/PQstudio/RestUtilityBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Grzegorz Graczyk",
            "email": "gregory90@gmail.com"
        }
    ],

    "require": {
        "php": ">=5.5.1",
        "friendsofsymfony/rest-bundle": "*",
        "symfony/framework-bundle": ">=2.3,<2.5",
        "jms/serializer-bundle": "dev-master",
        "jms/di-extra-bundle": "dev-master"
    },

    "require-dev": {
        "symfony/finder": "2.3.*"
    },

    "autoload": {
        "psr-0": { "PQstudio\\RestUtilityBundle": "" }
    },

    "minimum-stability": "dev",
    "target-dir": "PQstudio/RestUtilityBundle"
}
